<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e_health">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EHealth">
        <activity android:name=".views.activities.AdminNewActivity"
            android:label="Admin"/>
        <activity android:name=".views.activities.MedicalTreatmentActivity" />

        <activity
            android:name=".views.activities.DoctorDashboardActivity"
            android:label="@string/title_activity_doctor_dashboard" />
        <activity android:name=".views.activities.DoctorRegistrationActivity" />
        <activity
            android:name=".views.activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.EHealth.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.EHealth.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>